{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "name": "campaign"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "duration": {
      "type": "integer",
      "required": true,
      "max": 12,
      "min": 2
    }
  }
}
